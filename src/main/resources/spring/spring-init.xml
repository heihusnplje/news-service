<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="
       	http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">

	<bean class="com.tigerjoys.nbs.mybatis.core.utils.SpringBeanApplicationContext">
		<property name="entityBasepackage" value="com.tigerjoys.shark.miai.inter.entity" />
		<property name="applicationName" value="${application.name}" />
	</bean>
	
	<context:component-scan base-package="com.tigerjoys.shark" />
	
    <import resource="spring-redis.xml" />
	<import resource="spring-datasource.xml" />
    <import resource="spring-mvc.xml" />
	<!--  
		<import resource="spring-quartz.xml" />
	-->
</beans>
